<%- include('partials/navbar.ejs') %> <%- include('partials/header.ejs') %>

<div class="container">
  <div class="card">
    <h1 style="text-align: center; color: #ff00a6">Produtos</h1>

    <div class="card" style="background-color: aqua;">
      <table class="table table-bordered table-hover " style="width: 100%;">
        <thead class="table-dark">
          <tr>
            <th></th>
            <th>Nome:</th>
            <th>Pre√ßo</th>
            <th>Categoria</th>
          </tr>
        </thead>
        <tbody>
          <% produtos.forEach(produto => {%>
          <tr>
            <td style="text-align: center;"><img src="imgs/<%= produto.imagem %>" alt="Produto" /></td>
            <td><%= produto.nome %></td>
            <td><%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
            <td><%= produto.categoria %></td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>
  </div>
</div>


