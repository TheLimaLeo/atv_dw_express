<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<div class="container">
  <h1>Lista de Cadastros</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Telefone</th>
        <th>Endereço</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% cadastros.forEach(cadastro => { %>
        <tr>
          <td><%= cadastro.nome %></td>
          <td><%= cadastro.email %></td>
          <td><%= cadastro.telefone %></td>
          <td><%= cadastro.endereco %></td>
          <td>
            <button class="btn btn-warning btn-edit" data-id="<%= cadastro.id %>">Editar</button>
            <button class="btn btn-danger btn-delete" data-id="<%= cadastro.id %>">Excluir</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<script src="/js/crud.js"></script>

<%- include('partials/footer.ejs') %>
